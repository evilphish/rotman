{
    "layout1": {
	"type": "layout",
	"pages": ["page1","page2"],
	"page1": {
	    "type": "page",
	    "title": "General Settings",
	    "sections": ["config"]
	},
	"page2": {
	    "type": "page",
	    "title": "Input Settings",
	    "sections": ["xinput"]
	},
	"config": {
	    "type": "section",
	    "title": "Applet Configuration",
	    "keys": ["showorientation", "notifyorientation", "notifyolock", "uiscale", "showobuttons", "showomenu"]
	},
	"xinput": {
	    "type": "section",
	    "title": "Xinput settings",
	    "keys": ["autotoggle"]
	}
    },
    
    "showorientation": {
	"type": "switch",
	"default": true,
	"description": "Show abbreviated orientation in panel"
    },
    
    "notifyorientation": {
	"type": "switch",
	"default": true,
	"description": "Show notification on orientation change"
    },

    "notifyolock": {
	"type": "switch",
	"default": true,
	"description": "Show notification on orientation lock change"
    },

    "uiscale": {
	"type": "spinbutton",
	"default": 1.0,
	"min": 1.0,
	"max": 20.0,
	"step": 0.05,
	"unit": "x",
	"description": "Adjust the scale of the menu elements"
    },

    "showobuttons": {
	"type": "switch",
	"default": true,
	"description": "Show orientation change buttons"
    },

    "showomenu": {
	"type": "switch",
	"default": false,
	"description": "Show orientation change submenu"
    },
    
    "autotoggle": {
	"type": "switch",
	"default": true,
	"description": "Automatically toggle Xinput devices on rotation"
    }

    
}
